

{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
    "description": "Bank Pay",
  
  "title": {
      "text": "Bank Pay",
      "subtitle":"Comparing how each posotion pays given the bank in 2020/2021",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black"
    },
  
    "data": {
      "url": "https://raw.githubusercontent.com/freddielowe1/freddielowe1.github.io/main/data/pay2021.csv",
      "format": {"type": "csv"}
    },
  
    "height": 130,
    
    "width": 120,
    
    "mark": {"type": "bar", "color":"red"},
    
 "selection": {
    "LEVEL": {
      "type": "single",
      "fields": ["LEVEL"],
      "bind": {
        "input": "select",
        "options": [
          null,
          "JPMorgan",
          "GoldmanSachs",
          "CITI"
        ],
        "name": "Pick a region: "
      }
    }
  },


    "transform":[
      
      {"filter": {"selection": "LEVEL"}}


    ],
    
    "encoding": {
      
      "x": {"field": "0", "type": "nominal", "title": null},
      
      "y": {
        "field": "1",
        "type": "quantitative",
        "title": null
      
      },
  
    
      "tooltip": [
        {"field": "0", "type": "nominal", "title": "Position"},
        {"field": "1","type": "quantitative","title": "Pay, thousands of GBP","format": ",.0f"}
      ]
  
      
    },
    "resolve": {"scale": {"y": "independent"}}
  }
  